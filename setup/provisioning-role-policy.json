{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowKMSAliasActions",
      "Effect": "Allow",
      "Action": ["kms:*"],
      "Resource": "arn:aws:kms:*:*:alias/pwc-snappy/*"
    },
    {
      "Sid": "AllowKMSKeyActions",
      "Effect": "Allow",
      "Action": [
        "kms:Create*",
        "kms:Describe*",
        "kms:Enable*",
        "kms:List*",
        "kms:Put*",
        "kms:Update*",
        "kms:Revoke*",
        "kms:Disable*",
        "kms:Get*",
        "kms:Delete*",
        "kms:TagResource",
        "kms:UntagResource",
        "kms:ScheduleKeyDeletion",
        "kms:CancelKeyDeletion"
      ],
      "Resource": "*"
    },
    {
      "Sid": "VisualEditor1",
      "Effect": "Allow",
      "Action": ["iam:GetRole", "iam:PassRole"],
      "Resource": "*"
    },
    {
      "Sid": "AllowS3Actions",
      "Effect": "Allow",
      "Action": ["s3:*"],
      "Resource": ["arn:aws:s3:::pwc-snappy-*", "arn:aws:s3:::pwc-snappy-*/*"]
    },
    {
      "Sid": "AllowCFNActions",
      "Effect": "Allow",
      "Action": "cloudformation:*",
      "Resource": "arn:aws:cloudformation:*:*:stack/pwc-snappy-*/*"
    }
  ]
}
